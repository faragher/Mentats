<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="PlantBase">
    <defName>Plant_Gnosis</defName>
    <label>Gnosis plant</label>
    <description>Native to Ecaz, this cultivated plant, distantly related to the Fog Tree, stores a sugary, nootrophic compound in its roots. Can be refined into the Juice of Sapho.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/PotatoPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.8</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>GnosisRoot</harvestedThingDef>
      <harvestYield>2</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>12</growDays>
      <visualSizeRange>0.3~1.05</visualSizeRange>
      <wildOrder>2</wildOrder>
    </plant>
  </ThingDef>



</Defs>
